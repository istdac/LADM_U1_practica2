<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/poly2"
    tools:context=".CheckoutFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:textSize="30dp"
        android:textStyle="bold|italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre de facturación"
        android:id="@+id/pagnombre"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_marginBottom="10dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha de nacimiento"
        android:inputType="date"
        android:id="@+id/pagfechanac"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Dirección de Facturación"
        android:id="@+id/dirPag"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tarjeta de Crédito/Débito"
        android:id="@+id/tarjeta"
        android:layout_marginBottom="10dp"
        android:textColorHint="#000"
        android:textColor="#000"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Número telefónico"
        android:id="@+id/telefono"
        android:textColorHint="#000"
        android:textColor="#000"
        android:layout_marginBottom="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fecha estimada de entrega: Domingo 2022"
        android:textStyle="italic"
        android:textSize="19dp"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pagar"
        android:id="@+id/btnPagar"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="#03A9F4"
        android:textColor="@color/black"
        />
